						[1, 'Разработка антикризисного плана'],
						[2, 'Банкротство юридических и физических лиц'],
						[3, 'Ликвидация предприятия с задолженностью '],
						[4, 'Разработка антикризисного плана'],
						[1, 'Банкротство юридических и физических лиц'],
						[2, 'Ликвидация предприятия с задолженностью ']
